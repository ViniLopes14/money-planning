{% extends 'base.html.twig' %}

{% block title %}Despesas{% endblock %}

{% block body %}
    <div class="section profile">
        <div class="tab-pane fade show active profile-overview" id="profile-overview">
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Descrição</div>
                <div class="col-lg-9 col-md-8">{{ expense.description }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Categoria</div>
                <div class="col-lg-9 col-md-8">{{ category.description }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Conta</div>
                <div class="col-lg-9 col-md-8">{{ account.description }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Valor</div>
                <div class="col-lg-9 col-md-8">{{ expense.amount|format_currency('BRL') }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Vencimento</div>
                <div class="col-lg-9 col-md-8">{{ expense.date ? expense.date|date('d/m/Y') : '' }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Repetição</div>
                <div class="col-lg-9 col-md-8">{{ expense.repetitionType }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Periodicidade</div>
                <div class="col-lg-9 col-md-8">{{ expense.repetitionPeriodicity }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Número de parcelas</div>
                <div class="col-lg-9 col-md-8">{{ expense.repetitionInstallment }}</div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4 label ">Anotações</div>
                <div class="col-lg-9 col-md-8">{{ expense.note }}</div>
            </div>

            <div class="text-center">
                <button type="button" class="btn btn-primary">
                    <a style="text-decoration: none; color: #FFF" href="{{ path('app_expense_edit', {'id': expense.id}) }}">Editar</a>
                </button>
                <button type="button" class="btn btn-danger">
                    <a class="" style="text-decoration: none; color: #FFF" href="#" data-bs-toggle="modal" data-bs-target="#basicModal">Excluir</a>
                </button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="basicModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir despesa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Deseja realmente excluir a despensa <b>{{ expense.description }}</b> ?
            </div>
            <div class="modal-footer">
                <form method="post" action="{{ path('app_expense_delete', {'id': expense.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.id) }}">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
            </div>
        </div>
    </div><!-- End Basic Modal-->
{% endblock %}






