{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <button type="button" class="btn btn-primary">
            <a style="text-decoration: none; color: #FFF" href="{{ path('app_category_new') }}">Nova categoria</a>
        </button>
    </div>
    <!-- Table with hoverable rows -->
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descrição</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.description }}</td>
                    <td>
                        <a class="ri-eye-fill" href="{{ path('app_category_show', {'id': category.id}) }}" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Visualizar"></a>
                        <a class="ri-pencil-fill" href="{{ path('app_category_edit', {'id': category.id}) }}" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Editar"></a>
                        <!--<a class="ri-close-circle-fill" href="#" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Excluir"></a>-->
                        {{ include('category/_delete_form.html.twig', {'id': category.id}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">Nenhum registro encontrado.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <!-- End Table with hoverable rows -->
{% endblock %}
